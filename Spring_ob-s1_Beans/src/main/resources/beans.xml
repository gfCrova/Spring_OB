<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!-- Método inyeccion xml
    <bean id="calculatorService" class="org.example.CalculatorService"/>

    <bean id="gestorFacturas" class="org.example.GestorFacturas">
        <constructor-arg name="calculatorService" ref="calculatorService"/>
        <constructor-arg name="nombre" value="Factura 3000"/>
    </bean>
    -->

    <!-- Método scan (Anotaciones)-->
    <context:component-scan base-package="org.example"/>
</beans>